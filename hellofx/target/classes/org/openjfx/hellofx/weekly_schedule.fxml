<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import java.net.URL?>

<ScrollPane fitToWidth="true" styleClass="root-pane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.openjfx.hellofx.controllers.WeeklyScheduleController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <content>
        <BorderPane styleClass="root-pane">
            <center>
                <TableView fx:id="table" styleClass = "custom-table">
                    <columns>
                        <TableColumn fx:id="coachCol" text="%weekly.coach" styleClass = "customColum"/>
                        <TableColumn fx:id="clientCol" text="%weekly.client" styleClass = "customColum"/>
                        <TableColumn fx:id="dayCol" text="%weekly.day" styleClass = "customColum"/>
                        <TableColumn fx:id="startCol" text="%weekly.start" styleClass = "customColum"/>
                        <TableColumn fx:id="endCol" text="%weekly.end" styleClass = "customColum"/>
                        <TableColumn fx:id="titleCol" text="%weekly.title" styleClass = "customColum"/>
                        <TableColumn fx:id="actionCol" text="%weekly.actions" styleClass = "customColum"/>
                    </columns>
                </TableView>
            </center>
        </BorderPane>
    </content>
</ScrollPane>
