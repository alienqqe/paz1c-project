<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>


<ScrollPane fitToWidth="true" styleClass="root-pane" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.hellofx.controllers.RegisterController">
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
   <content>
      <VBox alignment="CENTER" spacing="10.0" fillWidth="true" styleClass="root-pane">
         <children>
            <VBox alignment="CENTER" spacing="30.0">
               <children>
                  <Label text="%register.title">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nameField" maxWidth="Infinity" promptText="%register.name" />
                  <TextField fx:id="emailField" maxWidth="Infinity" promptText="%register.email" />
                  <TextField fx:id="phoneField" maxWidth="Infinity" promptText="%register.phone" />
                  <Button mnemonicParsing="false" onAction="#onRegisterButton" text="%register.button" />
                  <Label fx:id="statusLabel" text="%register.status.label" visible="false" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
