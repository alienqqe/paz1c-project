<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<ScrollPane fitToWidth="true" styleClass="root-pane" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.openjfx.hellofx.controllers.DiscountRulesController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <content>
        <BorderPane styleClass="root-pane">
            <top>
                <VBox spacing="6" BorderPane.alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="14" right="16" bottom="10" left="16"/>
                    </padding>
                    <Label text="%discount.title" styleClass="h1"/>
                    <Label text="%discount.description"
                           wrapText="true" />
                </VBox>
            </top>

            <center>
                <VBox spacing="10">
                    <padding>
                        <Insets top="0" right="16" bottom="12" left="16"/>
                    </padding>

                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="75"/>
                        </columnConstraints>

                        <Label text="%discount.thresholds" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="thresholdsField"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"
                                   promptText="%discount.thresholds.prompt" GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>

                        <Label text="%discount.discounts" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="discountsField"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1"
                                   promptText="%discount.discounts.prompt" GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>

                        <Label text="%discount.note" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label text="%discount.note.text"
                               wrapText="true"
                               GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    </GridPane>

                    <HBox spacing="10">
                        <Button text="%discount.preview" onAction="#onPreview"/>
                        <Label fx:id="messageLabel" text="" wrapText="true"/>
                    </HBox>

                    <Separator/>

                    <Label text="%discount.preview.table"/>
                    <TableView fx:id="rulesTable" prefHeight="240" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="thresholdCol" text="%discount.column.threshold" prefWidth="200"/>
                            <TableColumn fx:id="percentCol" text="%discount.column.percent" prefWidth="150"/>
                        </columns>
                    </TableView>
                </VBox>
            </center>

            <bottom>
                <HBox spacing="10" BorderPane.alignment="CENTER_RIGHT">
                <padding>
                    <Insets top="14" right="14" bottom="14" left="14"/>
                </padding>
                    <Button text="%discount.cancel" onAction="#onCancel"/>
                    <Button text="%discount.save" defaultButton="true" onAction="#onSave"/>
                </HBox>
            </bottom>
        </BorderPane>
    </content>
</ScrollPane>
