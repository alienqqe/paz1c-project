<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="12.0" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.hellofx.controllers.AddAvailabilityController">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
    <children>
        <Label text="%availability.title" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <GridPane hgap="10" vgap="8">
            <columnConstraints>
                <ColumnConstraints minWidth="120" halignment="RIGHT"/>
                <ColumnConstraints minWidth="180"/>
            </columnConstraints>
            <children>
                <Label text="%availability.date" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <DatePicker fx:id="datePicker" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="%availability.start" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="startField" promptText="09:00" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="%availability.end" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="endField" promptText="11:00" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="%availability.note" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="noteField" promptText="%availability.note.prompt" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
        <HBox spacing="10">
            <Button fx:id="saveButton" text="%availability.save" onAction="#onSave"/>
            <Button text="%availability.cancel" onAction="#onCancel"/>
        </HBox>
    </children>
</VBox>
